Bootstrap: docker
From: debian:bullseye-slim


%setup
    echo "========================================"
    echo "Setup Section"
    echo "========================================"

    ########################################
    # Environmental Variables
    ########################################
    . ../src/shell/apptainer_builders/ENVS.sh.source
    . ../src/shell/apptainer_builders/rsync_exclude_options.sh.source

    echo $SEMACS_OPT_DIR
    TGT_DIR=$APPTAINER_ROOTFS/$SEMACS_OPT_DIR
    mkdir -p $TGT_DIR
    rsync -a $RSYNC_EXCLUDE_EXPRESSIONS ../../Semacs $TGT_DIR/Semacs

%files
    ../../Semacs $APPTAINER_ROOTFS/$SEMACS_OPT_DIR

%labels
    MAINTENER "Yusuke Watanabe (ywatanabe@alumni.u-tokyo.ac.jp)"
    VERSION "v1.0.0"
    BUILT_DATE \"`date`\"
    DEFINITION_FILE_NAME \"`basename "$0"`\"

%post -c /bin/bash
    echo "========================================"
    echo "Post Section"
    echo "========================================"

    ########################################
    # Environmental Variables
    ########################################
    . $SEMACS_OPT_DIR/src/shell/apptainer_builders/ENVS.sh.source

    ########################################
    # Basic Setup
    ########################################
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/install_basic_apt_packages.sh
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/install_emacs.sh
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/install_python.sh

    ########################################
    # Semacs User
    ########################################
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/create_semacs_user.sh
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/correct_permissions.sh
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/make_directories.sh
    bash $SEMACS_OPT_DIR/src/shell/apptainer_builders/create_bashrc.sh


%startscript
    echo "========================================"
    echo "Startscript Section"
    echo "========================================"

    . $SEMACS_OPT_DIR/src/shell/apptainer_builders/ENVS.sh.source
    export HOME=$SEMACS_HOME && cd $HOME
    exec sudo -u $SEMACS_USER sh -c bash $SEMACS_OPT_DIR/src/apptainer_builders/start_emacs.sh

%runscript
    echo "========================================"
    echo "Runscript Section"
    echo "========================================"

    . $SEMACS_OPT_DIR/src/shell/apptainer_builders/ENVS.sh.source
    if [ "$1" = "emacs" ] || [ "$#" = 0 ]; then
        export HOME=$SEMACS_HOME && cd $HOME
        exec sudo -u $SEMACS_USER sh -c bash $SEMACS_OPT_DIR/src/apptainer_builders/start_emacs.sh
    else
        exec "$@"
    fi


