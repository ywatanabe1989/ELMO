;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Base directories for the ELMO user
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defcustom elmo-user "elmo"
  "ELMO system user name."
  :type 'string
  :group 'elmo)

(defvar elmo-uid
  (string-to-number (shell-command-to-string (format "id -u %s" elmo-user)))
  "User ID of ELMO system user.")

(defcustom elmo-work-dir (format "~/.%s" elmo-user)
  "ELMO working directory."
  :type 'directory
  :group 'elmo)

(defcustom elmo-home (format "/home/%s" elmo-user)
  "ELMO user home directory."
  :type 'directory
  :group 'elmo)

(defvar elmo-workspace-dir (expand-file-name "workspace" elmo-work-dir))
(defvar elmo-source-dir (expand-file-name "self-evolving-agent/src" elmo-workspace-dir))
(defvar elmo-backups-dir (expand-file-name "backups" elmo-work-dir))
(defvar elmo-logs-dir (expand-file-name "logs" elmo-work-dir))
(defvar elmo-log-file (expand-file-name "history.log" elmo-logs-dir))
(defvar elmo-command-logs-dir (expand-file-name "command-logs" elmo-work-dir))
(defvar elmo-log-command-file
  (expand-file-name
   (format "%s.log"
           (format-time-string "%Y%m%d-%H%M%S"))
   elmo-command-logs-dir))
(defvar elmo-requests-dir (expand-file-name "requests" elmo-work-dir))
(defvar elmo-config-dir (expand-file-name "config" elmo-work-dir))


