;; Operation modes
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(defcustom elmo-readonly-mode t
  "When non-nil, prevent modifications to core agent files."
  :type 'boolean
  :group 'elmo)

(defcustom elmo-require-approval t
  "When non-nil, require user approval for critical operations."
