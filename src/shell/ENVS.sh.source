#!/bin/bash
# Time-stamp: "2024-12-08 03:44:12 (ywatanabe)"
# File: ./Semacs/src/shell/ENVS.sh.source

# Seamacs user
export SEMACS_USER=semacs
export SEMACS_UID=9999
export SEMACS_GROUP=emacs-users
export SEMACS_HOME=/home/$SEMACS_USER
export SEMACS_EMACS_HOME=$SEMACS_HOME/.emacs.d

# Seamacs workspaces
export SEMACS_OPT_DIR=/opt/$SEMACS_USER
export SEMACS_WORKSPACE=$SEMACS_OPT_DIR/workspace
export SEMACS_SRC=$SEMACS_OPT_DIR/src
export SEMACS_LOGS=$SEMACS_OPT_DIR/logs
export SEMACS_CONFIG=$SEMACS_OPT_DIR/config
export SEMACS_REQUESTS=$SEMACS_OPT_DIR/requests
export SEMACS_BACKUPS=$SEMACS_OPT_DIR/backups

# Emacs Configuration
export SEMACS_EMACS_BIN=/usr/bin/emacs
export SEMACS_EMACS_CLIENT=/usr/bin/emacsclient
export SEMACS_SERVER_SOCKET_DIR=$SEMACS_EMACS_HOME
export SEMACS_SERVER_SOCKET=$SEMACS_SERVER_SOCKET_DIR/$SEMACS_UID-server
export SEMACS_SERVER_CHECK_INTERVAL=1

# Feedback Loop
export SEMACS_MAX_RETRIES=5
export SEMACS_API_TIMEOUT=30

# LLM Configuration
export ANTHROPIC_API_KEY="your-api-key-here"  # Claude API key from Anthropic
export ANTHROPIC_ENGINE="claude-2"            # Using Claude 2 model

# Python Configuration
export VIRTUAL_ENV=$SEMACS_WORKSPACE/.env
export PATH=$VIRTUAL_ENV/bin:$PATH
export PYTHONPATH=VIRTUAL_ENV/.env/bin:$PYTHONPATH
